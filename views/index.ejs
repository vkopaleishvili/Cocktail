<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/public/styles.css" />
    <title>Cocktail bar</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
      }

      .container {
        display: inline-flex;
        flex-direction: column;
        align-content: center;
        align-items: center;
        height: 100vh;
        width: 500px;
        margin-left: 38%;
        max-width: 600px;
      }

      img {
        width: auto;
        height: 400px;
      }

      .input-form {
        display: inline-flex;
        flex-direction: column;
        align-content: left;
        align-items: left;
        width: 260px;
        margin-top: 20px;
      }

      input {
        margin-top: 10px;
        margin-bottom: 10px;
      }

      input[type="text"],
      input[type="number"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-bottom: 6px;
      }

      label {
        display: block;
        margin-bottom: 0px;
        font-weight: bold;
        margin-top: 2px;
      }

      h1 {
        text-align: center;
      }

      form {
        margin-top: 20px;
      }
      .component-container {
        text-align: left;
        width: 360px;
        margin-left: 40px;
      }
      ul {
        list-style: none;
      }
      .form-receipe {
        display: flex;
      }

      button {
        margin-bottom: 10px;
      }
      h3 {
        padding-top: 0;
      }
      .input-form .component-container {
        text-align: left;
        width: 360px;
        margin-left: 40px;
        border: solid grey;
        border-width: 1px;
        background: gray;
      }

      @media (max-width: 900px) {
        .container {
          margin-left: 2%;
        }
        .form-receipe {
          display: inline-flex;
          flex-direction: column;
          align-items: center;
        }
      }
    </style>
  </head>
  <body>
    <h1>Coctail Bar</h1>
    <form id="myForm" method="POST">
      <div class="container">
        <% if (locals.drinkImg) { %>
        <img src="<%= drinkImg %>" alt="cocktail" />
        <% } %>
        <div class="form-receipe">
          <div class="input-form">
            <label for="cocktail-by-name">Find your cocktail by name:</label>
            <input
              type="text"
              id="cocktail-by-name"
              placeholder="cocktail-by-name"
              name="coctailName"
            />
            <div class="button">
              <button
                formaction="getrecipe"
                type="submit"
                method="POST"
                name="getrecipe"
              >
                Search by name
              </button>
            </div>
            <label for="cocktail-by-letter"
              >Find your cocktail by first letter:</label
            >
            <input
              type="text"
              id="cocktail-by-letter"
              placeholder="cocktail-by-letter"
              name="strDrinkLetter"
            />
            <div class="button">
              <button
                formaction="findCocktailbyLetter"
                type="submit"
                method="POST"
                name="getrecipe"
              >
                Search by first letter
              </button>
              <button
                formaction="previousItem"
                type="submit"
                method="GET"
                name="nextItem"
              >
                Prev
              </button>
              <button
                formaction="nextItem"
                type="submit"
                method="POST"
                name="nextItem"
              >
                Next
              </button>
            </div>

            <label for="cocktail-by-ingredient"
              >Find your cocktail by ingredient:</label
            >
            <input
              type="text"
              id="cocktail-by-ingredient"
              placeholder="cocktail-by-ingredient"
              name="strIngredient"
            />
            <div class="button">
              <button
                formaction="findCockTailByIngredient"
                type="submit"
                method="POST"
                name="getrecipe"
              >
                Search by ingredient
              </button>
              <button
                formaction="previousItem"
                type="submit"
                method="GET"
                name="nextItem"
              >
                Prev
              </button>
              <button
                formaction="nextItem"
                type="submit"
                method="GET"
                name="nextItem"
              >
                Next
              </button>
            </div>
          </div>
          <div class="component-container">
            <% if (locals.name && locals.instructions && locals.ingredient) { %>
            <h3>Receipe for <%= name %></h3>
            <P><%= instructions %></P>
            <ul id="ingredientsList">
              <% ingredient.forEach((item)=> { %>
              <li><%= item %></li>
              <% }) %> <% } %>
            </ul>
          </div>
        </div>
      </div>
    </form>
  </body>
</html>
